@using FA.JustBlog.Core.Models;
@using FA.JustBlogMVC.Views.HtmlCustomHelper


@model List<Post>

<h1 class="fs-2 text-primary">@ViewBag.myStringTitle</h1>
@foreach (var post in Model)
{
    <div class="post-preview" style="padding: 0 0px">
        <h1>
            <a class="post-title fs-4" href="@Url.Action("Detail", "Post", new {Id = @post.Id})">@post.Title</a>
        </h1>
        <p class="text-muted italic-text fs-6">Posted @post.PostedOn</p>
        <p class="fs-6">@post.Content</p>

        <div class="w-25 d-flex pb-3 fs-6">
            Categories:
            <div class="text-center">@Html.CategoryLinkHelper(post.Category.Name, "text-primary")</div>
        </div>

        <div class="w-50 d-flex fs-6">
            Tag:
            @foreach (var id in post.PostTag)
            {
                @Html.TagLinkHelper(id.Tag.Name)
            }
        </div>
        <hr>
    </div>
}
