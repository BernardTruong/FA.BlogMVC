@model FA.JustBlog.Core.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<head>
    <style>
        .form-label {
            font-weight: 700;
            color: darkgoldenrod;
        }

            .form-label:after {
                content: ":";
                margin-right: 3px;
                color: darkgoldenrod;
            }
    </style>
</head>

<h1>Delete</h1>
<hr />

<div class="text-danger fs-4 fst-italic">Are you sure you want to delete this category?</div>
<br />
<div class="row">
    <div class="mb-3 col-6">
        <label asp-for="@Model.Name" class="form-label"></label>
        <span class="text-danger fw-bold">@Model.Name</span>
    </div>
    <div class="mb-3 col-6">
        <label asp-for="@Model.UrlSlug" class="form-label"></label>
        <span class="text-muted fst-italic">@Model.UrlSlug</span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label"></label>
        @Model.Description
    </div>   
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </form>
</div>
